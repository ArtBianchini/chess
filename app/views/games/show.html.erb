<table class="chessboard">
    <% (0..7).each do |row_index| %>
        <tr class="chessboard">
        <% (0..7).each do |column_index| %>
            <td class="chessboard">
                <% @game.pieces.each do |piece| %>
                    <% if piece.x_position == column_index && piece.y_position == row_index %>
                        <%= piece.piece_type.html_safe if piece.piece_type %>
                    <% end %>
                <% end %>
            </td>
        <% end %>
        </tr>
    <% end %>
</table>



